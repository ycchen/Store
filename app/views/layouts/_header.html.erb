<header>
	<div class="navbar">
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					 <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
			    	</a>
			    	<a class="brand" href="/">StoreEngine</a>

			    	<ul class="nav">
			    		<li><%= link_to "Order", order_path(@order) %></li>
			    		<li><a><div id="badger"><span class="badge badge-success" id="cart_count"><%= @order.order_items.count %></span></div></a></li>
			    	</ul>
			    	
			    	<form class="navbar-search pull-right">
			    		<%= text_field_tag :search, nil, :class => "search-query", :placeholder => "Search..." %>
			    		<input type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px" class="search_button">
			    	</form>

			    	
			    	<% if logged_in? %>
				    	<ul class="nav pull-right">
		    				<li><a href="#"><%= current_user.username %></a></li>
			    			<li><%= link_to "Log Out ", logout_path %></li>
					    </ul>
			    	<% else %>
			    		<ul class="nav pull-right">
			    			<li><%= link_to "Sign Up", signup_path %></li>
			    			<li><%= link_to "Log In", login_path %></li>
			    		</ul>
			    	<% end %>
			    	
				</div>
			</div>
		</div>
	</div>
</header>